<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="LawnRobot.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LawnRobot"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="using:LawnRobot.View"
    xmlns:viewmodel="using:LawnRobot.ViewModel"
    Title="Hannah Zamora's Lawn Robot Solver"
    mc:Ignorable="d">

    <Grid
        x:Name="RootGrid"
        Background="#5B3918"
        Loaded="OnRootGridLoaded">
        <Grid.Resources>
            <view:GridIndexToCanvasConverter
                x:Name="GridToCanvas"
                GridSpan="20"
                GridStart="-1" />
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <!--  Background  -->
        <local:TiledImageControl Grid.RowSpan="2" ImageUri="ms-appx:///Assets/Dirt.png" />

        <!--  Game Frame  -->
        <Border
            Margin="30"
            Background="Green"
            BorderBrush="White"
            BorderThickness="2"
            CornerRadius="25">
            <Grid>
                <local:TiledImageControl Grid.RowSpan="2" ImageUri="ms-appx:///Assets/BaseGrass.png" />
                <Viewbox UseLayoutRounding="True">
                    <ItemsControl
                        Width="340"
                        Height="240"
                        Margin="10"
                        ItemsSource="{x:Bind LawnSquaresView, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="viewmodel:LawnNodeViewModel">
                                <Image
                                    Width="20"
                                    Height="20"
                                    Loaded="OnTileLoaded"
                                    Source="ms-appx:///Assets/TallGrass.png" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                </Viewbox>
            </Grid>
        </Border>

        <!--  Controls  -->
        <Border
            Grid.Row="1"
            Margin="30,0,30,30"
            Background="#90000000"
            BorderBrush="White"
            BorderThickness="2"
            CornerRadius="25">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="RandomizeButton"
                    Width="150"
                    Height="45"
                    Margin="0,0,10,0"
                    Background="White"
                    Click="OnRandomizeClicked"
                    Content="Randomize"
                    CornerRadius="22"
                    FontSize="20" />
                <Button
                    x:Name="ExecuteButton"
                    Width="150"
                    Height="45"
                    Background="White"
                    Click="OnExecuteClicked"
                    Content="Execute"
                    CornerRadius="22"
                    FontSize="20" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
