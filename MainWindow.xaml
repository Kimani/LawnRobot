<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="LawnRobot.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LawnRobot"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Hannah Zamora's Lawn Robot Solver"
    mc:Ignorable="d">

    <Grid Background="#5B3918">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <!--  Background  -->
        <local:TiledImageControl Grid.RowSpan="2" ImageUri="ms-appx:///Assets/Dirt.png" />

        <!--  Game Frame  -->
        <Border
            Margin="30"
            Background="Green"
            BorderBrush="White"
            BorderThickness="2"
            CornerRadius="25">
            <Grid>
                <local:TiledImageControl Grid.RowSpan="2" ImageUri="ms-appx:///Assets/BaseGrass.png" />
                <Viewbox UseLayoutRounding="True">
                    <Grid
                        Width="300"
                        Height="200"
                        Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Image
                            Grid.Row="4"
                            Grid.Column="1"
                            Source="ms-appx:///Assets/TallGrass.png" />

                    </Grid>
                </Viewbox>
            </Grid>
        </Border>

        <!--  Controls  -->
        <Border
            Grid.Row="1"
            Margin="30,0,30,30"
            Background="#90000000"
            BorderBrush="White"
            BorderThickness="2"
            CornerRadius="25">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="RandomizeButton"
                    Width="150"
                    Height="45"
                    Margin="0,0,10,0"
                    Background="White"
                    Click="OnRandomizeClicked"
                    Content="Randomize"
                    CornerRadius="22"
                    FontSize="20" />
                <Button
                    x:Name="ExecuteButton"
                    Width="150"
                    Height="45"
                    Background="White"
                    Click="OnExecuteClicked"
                    Content="Execute"
                    CornerRadius="22"
                    FontSize="20" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
